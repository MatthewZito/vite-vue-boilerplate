{
  "name": "vite-vue-ts",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "rimraf dist && vite build",
    "check": "pnpm lint && pnpm lint:css && pnpm types",
    "clean": "rimraf node_modules pnpm-lock.yaml dist",
    "dev": "vite",
    "format": "prettier --write \"src/**/*.{js,vue,css,scss,md}\"",
    "lint": "eslint --ext .js,.json,.ts,.tsx,.vue . --fix",
    "lint:css": "stylelint \"src/**/*.{css,scss,vue}\" --fix",
    "serve": "VITE_CY_TEST=true vite preview --port 3000",
    "test:cy:dev": "cross-env VITE_CY_TEST=true CYPRESS_BASE_URL=http://localhost:3000 CYPRESS_STAGE=dev start-server-and-test dev http-get://localhost:3000/ \"cypress open\"",
    "test:cy": "cross-env VITE_CY_TEST=true vite build && start-server-and-test serve http-get://localhost:3000/ \"cypress open\"",
    "test:cy:ci": "cross-env VITE_CY_TEST=true vite build && start-server-and-test serve http-get://localhost:3000/ \"cypress run\"",
    "test:unit:dev": "jest --watchAll",
    "test:unit": "jest",
    "test": "npm run test:unit && npm run test:cy:ci",
    "types": "vue-tsc -p tsconfig.json"
  },
  "author": "Matthew Zito <matthewtzito@gmail.com> (goldmund)",
  "license": "MIT",
  "devDependencies": {
    "@magister_zito/eslint-config": "0.4.0",
    "@vitejs/plugin-legacy": "1.6.4",
    "@vitejs/plugin-vue": "1.10.2",
    "@vitejs/plugin-vue-jsx": "1.3.1",
    "@vue/compiler-sfc": "3.2.24",
    "@vue/runtime-core": "3.2.24",
    "@vue/server-renderer": "3.2.26",
    "@vue/vue3-jest": "27.0.0-alpha.4",
    "axe-core": "4.3.5",
    "cypress": "9.1.1",
    "cypress-axe": "0.13.0",
    "dotenv": "10.0.0",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.4.4",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "start-server-and-test": "1.14.0",
    "stylelint": "14.1.0",
    "ts-jest": "27.1.1",
    "typescript": "4.5.3",
    "unplugin-auto-import": "0.5.3",
    "vite": "2.7.1",
    "vue-tsc": "0.29.8"
  },
  "dependencies": {
    "pinia": "2.0.6",
    "vue": "3.2.24",
    "vue-router": "4.0.12"
  }
}
